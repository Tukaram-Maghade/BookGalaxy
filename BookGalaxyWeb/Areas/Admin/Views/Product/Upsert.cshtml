@model ProductVM
<div class="border p-3 mt-4">
    <div calss"row pb-2 text-center" class="bg-body-secondary">
        <h2 class"text-primary">@(Model.Product.Id != 0 ? "Edit" : "Create") Product</h2>
    </div>

    <form method="post" class="row" enctype="multipart/form-data">
        <input asp-for="Product.Id" hidden />
        <input asp-for="Product.ImageUrl" hidden />
        <div class="row">
            <div class="col-10">
                <div>
                    <div class="mb-3">
                        <label>Title</label>
                        <input asp-for="Product.Title" type="text" class="form-control" />
                        <span asp-validation-for="Product.Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>Description</label>
                        <input asp-for="Product.Description" type="text" class="form-control" />
                        <span asp-validation-for="Product.Description" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label>ISBN</label>
                        <input asp-for="Product.ISBN" type="text" class="form-control" />
                        <span asp-validation-for="Product.ISBN" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label>Author</label>
                        <input asp-for="Product.Author" type="text" class="form-control" />
                        <span asp-validation-for="Product.Author" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label>ListPrice</label>
                        <input asp-for="Product.ListPrice" type="number" class="form-control" />
                        <span asp-validation-for="Product.ListPrice" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label>Price</label>
                        <input asp-for="Product.Price" type="number" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label>Price50</label>
                        <input asp-for="Product.Price50" type="number" class="form-control" />
                        <span asp-validation-for="Product.Price50" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label>Price100</label>
                        <input asp-for="Product.Price100" type="number" class="form-control" />
                        <span asp-validation-for="Product.Price100" class="text-danger"></span>

                    </div>
                    <div class="mb-3">
                        <label asp-for="Product.CategoryId" class="form-control"></label>
                        <select asp-for="@Model.Product.CategoryId" asp-items="@Model.CategoryList" class="form-select ">
                            <option disabled selected>--Select Category-- </option>
                        </select>
                        <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label>ImageUrl</label>
                        <input type="file" name="file" class="form-control" />
                    </div>


                    <div class="row">
                        <div class="col-6">
                            @if (Model.Product.Id != 0)
                            {
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary form-control">Create</button>

                            }
                        </div>
                        <div class="col-6">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary form-control">
                                Back To List
                            </a>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-2">
                  <img src="@Model.Product.ImageUrl" width="100%"
                     style="border-radius:5px;border:1px solid" />
            </div>
        </div>

    </form>
</div>

@section Scripts{   
    <partial name="_ValidationScriptsPartial" />
                }